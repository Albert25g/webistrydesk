# Example environment variables for local development
# Copy this file to .env.local and fill in real values. Do NOT commit .env.local.

# Firebase public config (client-side only). Use NEXT_PUBLIC_ prefix so Next.js exposes them to the client.
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXX

# Example: other app-level flags
NEXT_PUBLIC_FEATURE_FLAG_EXAMPLE=false

# Server-side secrets (do NOT prefix with NEXT_PUBLIC). Keep these in your deployment platform only.
# For example:
# FIREBASE_SERVICE_ACCOUNT_KEY=-----BEGIN PRIVATE KEY-----\n...# Public Firebase environment variables (safe to commit)
# Populate these in your local .env.local and in your hosting environment.

# Required
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=

# Optional (recommended to fill where available)
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=

# Notes:
# - Leave values blank in this example file. Copy to .env.local and fill in values.
# - The app will consider Firebase configured only when NEXT_PUBLIC_FIREBASE_API_KEY and
#   NEXT_PUBLIC_FIREBASE_PROJECT_ID are set.
# Copy this to .env.local and replace placeholders with your Firebase project values
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXX

